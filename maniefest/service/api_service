apiVersion: v1
kind: Service
metadata:
  name: api-service
  namespace: default
spec:
  selector:
    app: api
  ports:
  - protocol: TCP
    port: 8000  # Port interne
    targetPort: 8000  # Port exposé par le conteneur
    nodePort: 30000  # Port externe pour accéder au service depuis le nœud
  type: NodePort  # Permet l'accès externe au service
